@model CartMidTask2.Models.Database.Product

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action="/Product/Create" method="post" class="card">
    <h2>Name</h2>
    <input type="text" name="Name" value="@Model.Name" placeholder="Name" class="form-control" />
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    <h2>Price</h2>
    <input type="text" name="Price" value="@Model.Price" placeholder="Price" class="form-control" />
    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    <h2>Qty</h2>
    <input type="text" name="Qty" value="@Model.Qty" placeholder="Qty" class="form-control" />
    @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })

    <input type="submit" value="Submit" />

</form>